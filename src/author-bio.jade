:php
  namespace #{wpttenv.name};
  /**
   * The template for displaying Author bios
   *
   * @package WordPress
   * @subpackage #{wpttenv.name}
   * @since wptt 1.0
   */

div.author-info
  h2.author-heading!= _e( 'Published by', '$$' )
  div.author-avatar
    :php
      /**
       * Filter the author bio avatar size.
       *
       * @since wptt 1.0
       *
       * @param int $size The avatar height and width size in pixels.
       */
      $author_bio_avatar_size = apply_filters( 'twentyfifteen_author_bio_avatar_size', 56 );

      echo get_avatar( get_the_author_meta( 'user_email' ), $author_bio_avatar_size );

  div.author-description
    h3.author-title!= echo get_the_author()

    p.author-bio
      - the_author_meta( 'description' )
      a.author-link(rel="author", href!=esc_url( get_author_posts_url( get_the_author_meta( 'ID' ) ) ) )
        - printf( __( 'View all posts by %s', '$$' ), get_the_author() )
