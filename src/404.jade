:php
  namespace #{wpttenv.name};
  /**
   * The template for displaying 404 pages (not found)
   *
   * @package WordPress
   * @subpackage #{wpttenv.name}
   * @since wptt 1.0
   */
  get_header();

div#primary.content-area
  main#main.site-main(role="main")
    section.error-404.not-found
      header.page-header
        h1.page-title!= _e( 'Oops! That page can&rsquo;t be found.', '$$' )
      div.page-content
        p!= _e( 'It looks like nothing was found at this location. Maybe try a search?', '$$' )
        - get_search_form()

:php
  get_footer();
