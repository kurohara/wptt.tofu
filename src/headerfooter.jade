:php
  namespace #{wpttenv.name};
  /**
   * The template for displaying the header
   *
   * Displays all of the head element and everything up until the "site-content" div.
   *
   * @package WordPress
   * @subpackage $$
   * @since $$ 1.0
   */
doctype
html(__=language_attributes(), class="no-js")
  head
    meta(charset!=-bloginfo( 'charset' ) )
    meta(name="viewport", content="width=device-width")
    link(rel="profile", href="http://gmpg.org/xfn/11")
    link(rel="pingback", href!=-bloginfo( 'pingback_url' ) )
    <!--[if lt IE 9]>
    script(src!=esc_url( get_template_directory_uri() )+"/js/html5.js" )
    <![endif]-->
    - wp_head()
  body(__=body_class())
    div#page.hfeed.site
      a.skip-link.screen-reader-text(href="#content")
        - _e( 'Skip to content', '$$' )

      div#sidebar.sidebar
        header#masthead.site-header(role="banner")
          div.site-branding
            - if ( is_front_page() && is_home() ) :
              h1.site-title
                a(href!=esc_url( home_url( '/' )), rel="home")
                  - bloginfo( 'name' )
            - else :
              p.site-title
                a(href!=esc_url( home_url( '/' ) ), rel="home")
                  - bloginfo( 'name' )
            - endif
            -  $description = get_bloginfo( 'description', 'display' );
            -  if ( $description || is_customize_preview() ) :
              p.site-description!= $description
            - endif;
            button.secondary-toggle!=_e( 'Menu and widgets', '$$' )
        - get_sidebar()
      div#content.site-content
        //
        // end of header part
        // separator mark for splitter tool
        :php
          namespace #{wpttenv.name};
          /**
           * The template for displaying the footer
           *
           * Contains the closing of the "site-content" div and all content after.
           *
           * @package WordPress
           * @subpackage $$
           * @since $$ 1.0
           */
      footer#colophon.site-footer(role="contentinfo")
        div.site-info
          :php
            /**
             * Fires before the wptt footer text for footer customization.
             *
             * @since $$ 1.0
             */
             ns_do_action( 'credits' );
          a(href!=esc_url( __( 'https://wordpress.org/', '$$' ) ))
            - printf( __( 'Proudly powered by %s', '$$' ), 'WordPress' )
    - wp_footer()

